WELCOME!

<div class="login-box">
  <%= form_for(:session, url: login_path) do |f| %>
    <h4><%= f.label :email %></h4>
    <h4><%= f.text_field :email %></h4>
    <h4><%= f.label :password %></h4>
    <h4><%= f.password_field :password %></h4>
    <h4><%= f.label :confirm_password %></h4>
    <h4><%= f.password_field :confirm_password %></h4>
    <%= f.submit "Login to your account", class: "btn btn-success" %>
  <% end %>
</div>
